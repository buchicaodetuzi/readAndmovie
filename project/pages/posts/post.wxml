<import src="post-item/post-item-template.wxml"/>

<view>
   <swiper catchtap="onSwiperTap" indicator-dots="true" autoplay='true' interval='5000'>
    <swiper-item>
       <image  src='/images/wx.png' data-postId="2"></image>
    </swiper-item>
    <swiper-item>
       <image  src='/images/vr.png' data-postId="3"></image>
    </swiper-item>
    <swiper-item>
       <image  src='/images/iqiyi.png' data-postId="4"></image>
    </swiper-item>
   </swiper>

   <block wx:for="{{posts_key}}">
   <view catchtap="onPostTap" data-postId="{{item.postId}}">
     <template is="postItem" data="{{...item}}" />
   </view>
   </block>

</view>